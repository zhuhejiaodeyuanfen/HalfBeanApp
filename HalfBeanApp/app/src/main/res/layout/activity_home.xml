<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wq.halfbeanapp.view.HomeActivity">

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvHome"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_home"
            android:gravity="center"
            android:padding="2dp"
            android:text="首页" />


        <TextView
            android:id="@+id/tvBean"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_news"
            android:gravity="center"
            android:padding="2dp"
            android:text="消息" />


        <TextView
            android:id="@+id/tvTopic"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_dynamic"
            android:gravity="center"
            android:padding="2dp"
            android:text="动态" />


        <TextView
            android:id="@+id/tvMine"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_my"
            android:gravity="center"
            android:padding="2dp"
            android:text="我的" />
    </LinearLayout>

</LinearLayout>
